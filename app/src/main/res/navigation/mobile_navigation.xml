<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.adryanev.sportsleague.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_navigation_home_to_leagueDetailFragment"
            app:destination="@+id/leagueDetailFragment"
            app:enterAnim="@anim/fragment_open_enter"
            app:exitAnim="@anim/fragment_open_exit"
            app:popEnterAnim="@anim/fragment_fade_enter"
            app:popExitAnim="@anim/fragment_fade_exit" >
        </action>

    </fragment>
    <fragment
        android:id="@+id/leagueDetailFragment"
        android:name="com.adryanev.sportsleague.ui.leaguedetail.LeagueDetailFragment"
        android:label="league_detail_fragment"
        tools:layout="@layout/league_detail_fragment" >
        <argument
            android:name="leagueId"
            app:argType="integer" />
    </fragment>


</navigation>
<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.adryanev.sportsleague.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_navigation_home_to_detailViewPagerFragment"
            app:destination="@id/detailViewPagerFragment" />

    </fragment>
    <fragment
        android:id="@+id/detailViewPagerFragment"
        android:name="com.adryanev.sportsleague.ui.detailviewpager.DetailViewPagerFragment"
        android:label="DetailViewPagerFragment"
        tools:layout="@layout/fragment_detail_view_pager">
        <argument
            android:name="leagueId"
            app:argType="integer" />
        <argument
            android:name="leagueImage"
            app:argType="string"
            app:nullable="true" />
    </fragment>
    <fragment
        android:id="@+id/detailMatch"
        android:name="com.adryanev.sportsleague.ui.detailmatch.DetailMatchFragment"
        android:label="DetailMatch"
        tools:layout="@layout/fragment_detail_match">
        <argument
            android:name="eventId"
            app:argType="string"
            app:nullable="true" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.adryanev.sportsleague.ui.search.SearchFragment"
        android:label="SearchFragment"
        tools:layout="@layout/fragment_search" />

    <action
        android:id="@+id/action_global_searchFragment"
        app:destination="@id/searchFragment" />
    <action
        android:id="@+id/action_global_detailMatch"
        app:destination="@id/detailMatch" />


</navigation>
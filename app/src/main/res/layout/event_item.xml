<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="event"
            type="com.adryanev.sportsleague.data.models.api.event.Event" />

        <variable
            name="onClickListener"
            type="android.view.View.OnClickListener" />
    </data>

    <FrameLayout
        android:id="@+id/event_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:background="@drawable/card_edge">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:onClick="@{onClickListener}"
            android:theme="@style/Widget.MaterialComponents.CardView"
            app:cardCornerRadius="12dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/event_tv_score_separator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:text="@string/score_separator"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                    app:layout_constraintBottom_toBottomOf="@+id/event_tv_score_home"
                    app:layout_constraintEnd_toStartOf="@+id/event_tv_away_score"
                    app:layout_constraintStart_toEndOf="@+id/event_tv_score_home"
                    app:layout_constraintTop_toTopOf="@+id/event_tv_score_home" />

                <TextView
                    android:id="@+id/event_tv_score_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:text="@{event.intHomeScore}"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display2"
                    app:layout_constraintBottom_toBottomOf="@+id/event_tv_home"
                    app:layout_constraintStart_toEndOf="@+id/event_tv_home"
                    app:layout_constraintTop_toTopOf="@+id/event_tv_home"
                    tools:text="0" />

                <TextView
                    android:id="@+id/event_tv_away_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="16dp"
                    android:text="@{event.intAwayScore}"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display2"
                    app:layout_constraintBottom_toBottomOf="@+id/event_tv_away"
                    app:layout_constraintEnd_toStartOf="@+id/event_tv_away"
                    app:layout_constraintTop_toTopOf="@+id/event_tv_away"
                    tools:text="0" />

                <TextView
                    android:id="@+id/event_tv_home"
                    android:layout_width="72dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:text="@{event.strHomeTeam}"
                    android:textAlignment="viewStart"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0"
                    tools:text="@tools:sample/full_names" />

                <TextView
                    android:id="@+id/event_tv_away"
                    android:layout_width="72dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="16dp"
                    android:text="@{event.strAwayTeam}"
                    android:textAlignment="viewEnd"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0"
                    tools:text="@tools:sample/full_names" />

                <TextView
                    android:id="@+id/event_tv_event_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="@{event.strDate}"
                    app:layout_constraintEnd_toEndOf="@+id/event_tv_score_separator"
                    app:layout_constraintStart_toStartOf="@+id/event_tv_score_separator"
                    app:layout_constraintTop_toBottomOf="@+id/event_tv_score_separator"
                    tools:text="@tools:sample/date/hhmmss" />

                <TextView
                    android:id="@+id/event_tv_event_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp"
                    android:text="@{event.strTime}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/event_tv_event_date"
                    app:layout_constraintStart_toStartOf="@+id/event_tv_event_date"
                    app:layout_constraintTop_toBottomOf="@+id/event_tv_event_date"
                    tools:text="@tools:sample/cities" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

    </FrameLayout>

</layout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <View
        android:id="@+id/thumbnail"
        android:layout_width="@dimen/placeholderImage"
        android:layout_height="@dimen/placeholderImage"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/rounded_rectangle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/league_detail_placeholder_nama"
        android:layout_width="120dp"
        android:layout_height="@dimen/placeholderTextHeight"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/rounded_rectangle"
        android:backgroundTint="#bbbbbb"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.023"
        app:layout_constraintStart_toEndOf="@+id/thumbnail"
        app:layout_constraintTop_toTopOf="@+id/thumbnail" />

    <View
        android:id="@+id/league_detail_placeholder_deskripsi1"
        android:layout_width="150dp"
        android:layout_height="@dimen/placeholderTextHeight"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_rectangle"
        app:layout_constraintStart_toStartOf="@+id/league_detail_placeholder_nama"
        app:layout_constraintTop_toBottomOf="@+id/league_detail_placeholder_nama" />

    <View
        android:id="@+id/league_detail_placeholder_deskripsi2"
        android:layout_width="100dp"
        android:layout_height="@dimen/placeholderTextHeight"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_rectangle"
        app:layout_constraintStart_toStartOf="@+id/league_detail_placeholder_deskripsi1"
        app:layout_constraintTop_toBottomOf="@+id/league_detail_placeholder_deskripsi1" />

    <View
        android:id="@+id/league_detail_placeholder_deskripsi3"
        android:layout_width="100dp"
        android:layout_height="@dimen/placeholderTextHeight"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_rectangle"
        app:layout_constraintStart_toStartOf="@+id/league_detail_placeholder_deskripsi2"
        app:layout_constraintTop_toBottomOf="@+id/league_detail_placeholder_deskripsi2" />

</androidx.constraintlayout.widget.ConstraintLayout>
